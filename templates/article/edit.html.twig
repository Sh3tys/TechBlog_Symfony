{% extends 'base.html.twig' %} {% block title %}Modifier {{ article.titre }} -
TechBlog{% endblock %} {% block body %}
<div class="row">
    <div class="col-lg-8 mx-auto">
        <h1 class="mb-4">Modifier l'article</h1>

        <div class="card shadow p-3">
            {{ form_start(form) }}
            {{ form_row(form.titre) }}
            {{ form_row(form.contenu) }}
            {{ form_row(form.publie) }}
            <div class="d-flex justify-content-between">
                <a
                    href="{{ path('app_article_show', { id: article.id }) }}"
                    class="btn btn-secondary"
                    >Annuler</a
                >
                <button type="submit" class="btn btn-primary">
                    Enregistrer
                </button>
            </div>
            {{ form_end(form) }}
        </div>
    </div>
</div>
{% endblock %}
