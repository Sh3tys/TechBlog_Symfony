{% extends 'base.html.twig' %} {% block title %}Articles - TechBlog{% endblock
%} {% block body %}
<div class="d-flex justify-content-between align-items-center mb-4">
    <h1>Tous les articles</h1>
    {% if is_granted('ROLE_ADMIN') %}
    <a href="{{ path('app_article_new') }}" class="btn btn-primary"
        >Nouvel article</a
    >
    {% endif %}
</div>

{% if articles is empty %}
<div class="alert alert-info">Aucun article publié.</div>
{% else %}
<div class="row">
    {% for article in articles %}
    <div class="col-md-6 col-lg-4 mb-4">
        <div class="card h-100 shadow-sm">
            <div class="card-body">
                <h5 class="card-title">{{ article.titre }}</h5>
                <p class="card-text text-muted">
                    {{ article.contenu|slice(0, 150) }}...
                </p>
            </div>
            <div class="card-footer bg-transparent">
                <small class="text-muted"
                    >{{ article.auteur.pseudo }} •
                    {{ article.dateCreation|date('d/m/Y') }}</small
                >
                <a
                    href="{{ path('app_article_show', { id: article.id }) }}"
                    class="btn btn-sm btn-outline-primary float-end"
                    >Lire →</a
                >
            </div>
        </div>
    </div>
    {% endfor %}
</div>
{% endif %} {% endblock %}
