{% extends 'base.html.twig' %} {% block title %}Accueil - TechBlog Gaming{%
endblock %} {% block body %}
<div class="jumbotron bg-dark text-white p-5 rounded mb-4">
    <h1 class="display-4">Bienvenue sur TechBlog Gaming !</h1>
    {% if not app.user %}
    <a class="btn btn-primary btn-lg" href="{{ path('app_register') }}"
        >Rejoindre</a
    >
    {% endif %}
</div>

<h2 class="mb-4">Derniers articles</h2>

{% if articles is empty %}
<div class="alert alert-info">Aucun article publié pour le moment.</div>
{% else %}
<div class="row">
    {% for article in articles %}
    <div class="col-md-6 col-lg-4 mb-4">
        <div class="card h-100 shadow-sm">
            <div class="card-body">
                <h5 class="card-title">{{ article.titre }}</h5>
                <p class="card-text text-muted">
                    {{ article.contenu|slice(0, 150) }}...
                </p>
            </div>
            <div class="card-footer bg-transparent">
                <small class="text-muted"
                    >{{ article.auteur.pseudo }} •
                    {{ article.dateCreation|date('d/m/Y') }}</small
                >
                <a
                    href="{{ path('app_article_show', { id: article.id }) }}"
                    class="btn btn-sm btn-outline-primary float-end"
                    >Lire plus →</a
                >
            </div>
        </div>
    </div>
    {% endfor %}
</div>
<div class="text-center mt-4">
    <a href="{{ path('app_article_index') }}" class="btn btn-primary"
        >Voir tous</a
    >
</div>
{% endif %} {% endblock %}
