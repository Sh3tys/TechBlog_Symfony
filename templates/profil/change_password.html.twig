{% extends 'base.html.twig' %} {% block title %}Changer mon mot de passe -
TechBlog{% endblock %} {% block body %}
<div class="row">
    <div class="col-lg-6 mx-auto">
        <h1 class="mb-4">Changer mon mot de passe</h1>

        <div class="card shadow p-3">
            {{ form_start(form) }}
            {{ form_row(form.currentPassword) }}
            {{ form_row(form.plainPassword.first) }}
            {{ form_row(form.plainPassword.second) }}
            <div class="d-flex justify-content-between mt-4">
                <a href="{{ path('app_profil') }}" class="btn btn-secondary"
                    >Annuler</a
                >
                <button type="submit" class="btn btn-primary">Modifier</button>
            </div>
            {{ form_end(form) }}
        </div>
    </div>
</div>
{% endblock %}
