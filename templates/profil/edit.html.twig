{% extends 'base.html.twig' %} {% block title %}Modifier mon profil - TechBlog{%
endblock %} {% block body %}
<div class="row">
    <div class="col-lg-6 mx-auto">
        <h1 class="mb-4">Modifier mon profil</h1>

        <div class="card shadow p-3">
            {{ form_start(form) }}
            {{ form_row(form.email) }}
            {{ form_row(form.pseudo) }}
            <div class="d-flex justify-content-between mt-4">
                <a href="{{ path('app_profil') }}" class="btn btn-secondary"
                    >Annuler</a
                >
                <button type="submit" class="btn btn-primary">
                    Enregistrer
                </button>
            </div>
            {{ form_end(form) }}
        </div>
    </div>
</div>
{% endblock %}
