<!DOCTYPE html>
<html lang="fr">
    <head>
        <meta charset="UTF-8" />
        <meta name="viewport" content="width=device-width, initial-scale=1" />
        <title>{% block title %}TechBlog{% endblock %}</title>
        <link
            rel="stylesheet"
            href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css"
        />
        <script
            src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"
            defer
        ></script>
    </head>
    <body class="bg-light text-dark">
        <!-- Navbar simple -->
        <nav class="navbar navbar-expand-lg navbar-dark bg-dark py-2">
            <div class="container">
                <a class="navbar-brand fw-bold" href="{{ path('app_accueil') }}"
                    >TechBlog</a
                >
                <button
                    class="navbar-toggler"
                    type="button"
                    data-bs-toggle="collapse"
                    data-bs-target="#navbarNav"
                >
                    <span class="navbar-toggler-icon"></span>
                </button>

                <div class="collapse navbar-collapse" id="navbarNav">
                    <ul class="navbar-nav me-auto mb-2 mb-lg-0">
                        <li class="nav-item">
                            <a class="nav-link" href="{{ path('app_accueil') }}"
                                >Accueil</a
                            >
                        </li>
                        <li class="nav-item">
                            <a
                                class="nav-link"
                                href="{{ path('app_article_index') }}"
                                >Articles</a
                            >
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="{{ path('app_contact') }}"
                                >Contact</a
                            >
                        </li>
                        <li class="nav-item">
                            <a
                                class="nav-link"
                                href="{{ path('app_qui_sommes_nous') }}"
                                >A propos</a
                            >
                        </li>
                    </ul>

                    <ul class="navbar-nav">
                        {% if app.user %}
                        <li>
                            <a
                                class="nav-link"
                                href="{{ path('app_mes_articles') }}"
                            >
                                Mes articles
                            </a>
                        </li>
                        <li>
                            <a
                                class="nav-link"
                                href="{{ path('app_article_new') }}"
                            >
                                Nouvel article
                            </a>
                        </li>

                        {% if is_granted('ROLE_ADMIN') %}
                        <li><hr class="dropdown-divider" /></li>
                        <li>
                            <a
                                class="nav-link"
                                href="{{ path('app_admin_articles') }}"
                            >
                                GÃ©rer les articles
                            </a>
                        </li>

                        {% endif %}
                        <li class="nav-item">
                            <a class="nav-link" href="{{ path('app_profil') }}"
                                >ðŸ‘¤{{ app.user.pseudo }}</a
                            >
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="{{ path('app_logout') }}"
                                >DÃ©connexion</a
                            >
                        </li>
                        {% else %}
                        <li class="nav-item">
                            <a class="nav-link" href="{{ path('app_login') }}"
                                >Connexion</a
                            >
                        </li>
                        <li class="nav-item">
                            <a
                                class="nav-link btn btn-primary text-white ms-2"
                                href="{{ path('app_register') }}"
                                >Inscription</a
                            >
                        </li>
                        {% endif %}
                    </ul>
                </div>
            </div>
        </nav>

        <!-- Contenu principal -->
        <main class="container my-4">{% block body %}{% endblock %}</main>

        <!-- Footer simplifiÃ© -->
        <footer class="bg-dark text-white py-3 mt-5">
            <div class="container text-center">
                <ul
                    class="list-unstyled mb-2 d-flex justify-content-center gap-3"
                >
                    <li>
                        <a
                            href="{{ path('app_mentions_legales') }}"
                            class="text-white-50"
                            >Mentions lÃ©gales</a
                        >
                    </li>
                    <li>
                        <a href="{{ path('app_cgu') }}" class="text-white-50"
                            >CGU</a
                        >
                    </li>
                    <li>
                        <a
                            href="{{ path('app_confidentialite') }}"
                            class="text-white-50"
                            >ConfidentialitÃ©</a
                        >
                    </li>
                </ul>
                <div class="text-muted">
                    &copy; {{ "now"|date("Y") }} TechBlog
                </div>
            </div>
        </footer>
    </body>
</html>
